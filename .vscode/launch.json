    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tic (M-M)",
            "type": "python",
            "request": "launch",
            "module": "src.pypad",
            "justMyCode": true,
            "args": [
                "run",
                "--game=tic",
                "--player1=mcts",
                "--player2=mcts",
            ]
        },
        {
            "name": "Connect (M-M)",
            "type": "python",
            "request": "launch",
            "module": "src.pypad",
            "justMyCode": true,
            "args": [
                "run",
                "--game=connectx",
                "--player1=mcts",
                "--player2=mcts",
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "PyPad",
            "type": "python",
            "request": "launch",
            "module": "src.pypad",
            "justMyCode": true
        }
    ]
